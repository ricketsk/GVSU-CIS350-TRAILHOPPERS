#:import MapView kivy.garden.mapview.MapView
WindowManager:
    WelcomeWindow:
    MainWindow:

<WelcomeWindow>:
    name: "welcome"
    BoxLayout:
        size_hint: .8, .8
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        spacing: dp(40)
        orientation: 'vertical'
        MDLabel:
            text: "TrailHopper"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 65/255.0, 185/255.0, 105/255.0, 1
            font_style: 'Button'
            font_size: 70
        MDRaisedButton:
            text: "Let us go!"
            md_bg_color: 65/255.0, 185/255.0, 105/255.0, 1
            on_release: 
                app.root.current = "main"

<MainWindow>:
    name: "main"

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1


        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'HOME'   
            icon: 'home-variant-outline'
            MapView:
                lat: str(root.lat)
                lon: str(root.long)
                zoom: 11
        


        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'SEARCH'
            icon: 'magnify'
            # on_enter: root.switch()     
            MDLabel:
                text: 'Search Trails Here'
                halign: 'center'


        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'PROFILE'
            icon: 'account-circle-outline'
            MDLabel:
                text: 'Profile Info Here'
                halign: 'center'

        

        




   


        


    

    

            

            

